{% extends 'base.html.twig' %}

{% block body %}
    <h1>df - ZMIEN</h1>

    <table class="table vietab">
        <tbody>
        	<tr>
                <th>Login</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Imię</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if user.updated %}{{ user.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

<div class="container-fluid">
<div class="row">
	<div class="col-sm-3"></div>
	
	<div class="col-sm-2">
		<a href="{{ path(routeNames.index) }}" class="btn btn-default btn-block">Powrót do listy</a>
	</div>
	<div class="col-sm-2">
		<a href="{{ path(routeNames.edit, { 'id': user.id }) }}" class="btn btn-primary btn-block">Edycja</a>
	</div>
	<div class="col-sm-2">
		{{ form_start(delete_form, {'attr': {'onsubmit':'return confirm("Czy na pewno usunąć?");'} } ) }}
                <input type="submit" value="Usuń" class="btn btn-danger btn-block">
            {{ form_end(delete_form) }}
	</div>
	
	<div class="col-sm-3"></div>
</div>
</div>
    
{% endblock %}
